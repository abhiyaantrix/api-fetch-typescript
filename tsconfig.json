{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "isolatedModules": true,
        "noEmit": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": ["src"]
}